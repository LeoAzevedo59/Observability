<?xml version="1.0" encoding="utf-8" ?>
<nlog xmlns="http://www.nlog-project.org/schemas/NLog.xsd"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      autoReload="true"
      throwConfigExceptions="true"
      internalLogLevel="Warn"
      internalLogFile="/logs/internal-nlog.txt">

    <!-- Targets = para onde os logs vão -->
    <targets>
        <!-- Console -->
        <target xsi:type="Console" name="console" layout="${longdate} | ${level:uppercase=true} | ${logger} | ${message} ${exception}" />
        <!-- Arquivo -->
        <target xsi:type="File" name="file" fileName="/logs/log.txt"
                layout="${longdate} | ${level:uppercase=true} | ${logger} | ${message} ${exception}" />
    </targets>

    <!-- Rules = quem loga para onde -->
    <rules>
        <!-- Tudo vai para console -->
        <logger name="*" minlevel="Trace" writeTo="console" />
        <!-- Tudo vai também para arquivo -->
        <logger name="*" minlevel="Info" writeTo="file" />
    </rules>
</nlog>
